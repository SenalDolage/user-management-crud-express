<%- include('partials/header') -%>

<div class="user-list">
  <div class="container">
    <div class="box-nav d-flex-justify-between py-3">
      <a href="/add-user" class="btn btn-primary"> Add New User </a>
    </div>

    <form action="/" class="form">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% for(var i=0; i< users.length; i++) { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].gender %></td>
            <td><%= users[i].status %></td>
            <td>
              <a
                href="/edit-user?id=<%= users[i]._id %>"
                class="btn btn-secondary"
              >
                Edit
              </a>
              <a data-id="<%= users[i]._id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </form>
  </div>
</div>

<%- include('partials/footer') -%>
